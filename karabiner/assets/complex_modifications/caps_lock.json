{
  "title": "Change caps_lock to control ",
  "rules": [
    {
      "description": "Change caps_lock to control if pressed with other keys, caps_lock if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "conditions":[
            {
              "type":"device_if",
              "identifiers":[
                {
                  "is_keyboard": true,
                  "vendor_id": "1452"
                }
              ]
            }
          ],
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    }
  ]
}
