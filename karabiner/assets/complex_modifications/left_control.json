{
  "title": "Change left control to option+shift",
  "rules": [
    {
      "description": "change left control to option+shift",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_option"
              "modifiers":[
                "left_shift"
              ]
            }
          ],
          "conditions":[
            {
              "type":"device_if",
              "identifiers":[
                {
                  "is_built_in_keyboard": true
                }
              ]
            }
          ],
        }
      ]
    }
  ]
}
